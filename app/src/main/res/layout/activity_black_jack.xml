<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BlackJack"
    android:id="@+id/tableLayout"
    android:background="#ff22853f">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLinearLayout">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hit"
            android:id="@+id/hitButton"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:textColor="#fff"
            android:background="@drawable/buttonclear"
            android:layout_column="1"
            android:layout_span="1"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Stay"
            android:id="@+id/stayButton"
            android:layout_column="2"
            android:layout_margin="0dp"
            android:layout_marginLeft="5dp"
            android:padding="0dp"
            android:textColor="#fff"
            android:background="@drawable/buttonclear"
            android:layout_span="1"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:id="@+id/newGameButton"
            android:layout_margin="0dp"
            android:layout_marginLeft="5dp"
            android:layout_column="3"
            android:layout_span="1"
            android:textColor="#fff"
            android:background="@drawable/buttonclear"
            android:padding="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/messageLinearLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/endGameResultsTextView"
            android:textSize="18sp"
            android:layout_column="1"
            android:text="Tap New game to begin!"
            android:textColor="#fff"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:layout_span="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dealerLabelLinearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dealer"
            android:id="@+id/dealerNameTextView"
            android:textSize="24sp"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:layout_column="1"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:id="@+id/dealerScoreTextView"
            android:layout_column="2"
            android:textColor="#ffffffff"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hand Count:"
            android:id="@+id/dealerHandTextView"
            android:layout_column="2"
            android:textColor="#ffffffff"
            android:layout_weight="1" />
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:id="@+id/dealerCardTableRow">

    </TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playerLabelLinearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="You"
            android:id="@+id/playerNameTextView"
            android:gravity="center"
            android:textSize="24dp"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:layout_column="1"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:id="@+id/playerScoreTextView"
            android:layout_column="2"
            android:textColor="#ffffffff"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hand Count:"
            android:id="@+id/playerHandTextView"
            android:layout_column="2"
            android:textColor="#ffffffff"
            android:layout_weight="1" />
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:id="@+id/playerCardTableRow">

    </TableRow>

</TableLayout>
